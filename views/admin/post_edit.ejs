<%- include('partial/ad_header') %>
            <%- include('partial/sidebar') %>
    <div class="content-wrapper">
        <div class="container">
        <h2>
            <%= title %>
        </h2>
        <form action="/update" method="post" enctype="multipart/form-data">
            <input type="hidden" value="<%= article.id %>" name="id">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" placeholder="Enter Name" value="<%= article.name %>" name="name" required>
            </div>
            <div class="form-group">
                <label for="image">Image:</label>
                <input type="file" class="form-control" id="image" placeholder="Enter image" value="<%= article.image %>" name="image" required>
            </div>
            <div class="form-group">
                <label for="summary">Summary</label>
                <input type="text" class="form-control" id="summary" placeholder="summary" value="<%= article.summary %>" name="summary" required>
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" placeholder="content" name="content" required><%= article.content %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    </div>

<%- include('partial/ad_footer') %>
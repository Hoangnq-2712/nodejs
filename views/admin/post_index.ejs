<%- include('partial/ad_header') %>
            <%- include('partial/sidebar') %>
        <div class="content-wrapper">
          <div class="container">
            <!-- <h2><%= title %></h2> -->
            <nav class="navbar navbar-light ">
              <div class="container-fluid">
                <!-- <a class="navbar-brand">Navbar</a> -->
                <h2><%= title %></h2>
                <form class="d-flex" action="/admin/search" method="post">
                  <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                  <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
              </div>
            </nav>

            <a href="post/add" class="btn btn-sm btn-primary">Thêm bài viết</a><br/><br/>
            <table class="table table-dark table-striped">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Name</th>
                  <th>category_id</th>
                  <th>user_id</th>
                  <th>image</th>
                  <th>DESCRIPTION</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody><% var stt=0; %>
                  <% articles.forEach(function(article){ %>
                      <tr>
                          <td><%= stt++ %></td>
                          <td><%= article.name %></td>
                          <td><%= article.category_id %></td>
                          <td><%= article.user_id %></td>
                          <td><img src="/upload/<%= article.image %>" width="50" height="50"></td>
                          <td style="text-align:justify;"><%= article.summary %></td>
                          <td>
                              <a href="post/edit/<%= article.id %>" class="btn btn-sm btn-primary">Edit</a>
                              <a href="post/delete/<%= article.id %>" class="btn btn-sm btn-danger" onclick="abc()">Delete</a>
                              <!-- <script>
                                  function abc(){
                                      confirm("Bạn có muốn xóa!");
                                  }
                              </script> -->
                          </td>
                      </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>
          </div>
<%- include('partial/ad_footer') %>
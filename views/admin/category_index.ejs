<%- include('partial/ad_header') %>
            <%- include('partial/sidebar') %>
        <div class="content-wrapper">
          <div class="container">
            <h2><%= title %></h2>
            <a href="/category/add" class="btn btn-sm btn-primary">Add Category</a><br/><br/>
            <table class="table table-dark table-striped">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Name</th>
                  <th>Position</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody><% var stt=0; %>
                  <% categories.forEach(function(category){ %>
                      <tr>
                          <td><%= stt++ %></td>
                          <td><%= category.name %></td>
                          <td><%= category.position %></td>
                          <td>
                              <a href="category/delete/<%= category.id %>" class="btn btn-sm btn-danger">Delete</a>
                          </td>
                      </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>
          </div>
<%- include('partial/ad_footer') %>